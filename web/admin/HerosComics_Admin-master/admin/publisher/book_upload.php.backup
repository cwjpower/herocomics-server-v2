    <script>
    function validateForm() {
        const zipFile = document.querySelector('input[name="book_zip"]').files[0];
        if (zipFile) {
            const fileSize = zipFile.size / 1024 / 1024; // MB
            if (fileSize > 500) {
                alert('ZIP 파일 크기는 500MB 이하여야 합니다.');
                return false;
            }
        }
        return true;
    }
